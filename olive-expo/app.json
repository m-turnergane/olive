{
  "expo": {
    "name": "Olive",
    "slug": "olive-expo",
    "owner": "mgane",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "olive",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#BAC7B2"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.olive.mental-health",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Olive needs access to your microphone for voice conversations with your AI companion.",
        "NSSpeechRecognitionUsageDescription": "Olive uses speech recognition to understand your voice during conversations."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#BAC7B2"
      },
      "package": "com.olive.mentalhealth",
      "permissions": ["RECORD_AUDIO", "INTERNET"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Olive to access your microphone for voice conversations."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
